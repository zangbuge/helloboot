<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="300">
    <Properties>
        <Property name="baseDir">/app/logs/helloboot</Property>
        <Property name="projectName">helloboot</Property>
        <Property name="logFormat">%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%t] %class: %line %n %msg %n</Property>
    </Properties>
    <!--先定义所有的appender-->
    <appenders>
        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）-->
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${logFormat}"/>
        </Console>

        <RollingFile name="RollingFile" fileName="${baseDir}/${projectName}.log"
                     filePattern="${baseDir}/${projectName}.log.%d{yyyy-MM-dd}-%i">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${logFormat}"/>
            <!-- 保存日志使用时间滚动策略, 具体格式由 filePattern 的配置决定(按天, 月) -->
            <TimeBasedTriggeringPolicy interval="1"/>
            <!-- 日志保留时间, 默认是保存7份, 超过了就会覆盖之前的 -->
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </appenders>
    <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <loggers>
        <!--设置异步记录器，指向配置引用AppenderRef 官网说明: 异步logger比异步appender快12倍,比同步logger快68倍。-->
        <AsyncLogger name="ASYNC" includeLocation="true">
            <AppenderRef ref="RollingFile"/>
        </AsyncLogger>
        <root level="INFO">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFile"/>
        </root>
        <!--这里配置 过滤日志 -->
        <logger name="com.hugmount.helloboot" level="DEBUG"></logger>
        <logger name="org.springframework.web" level="ERROR"/>
    </loggers>
</configuration>
